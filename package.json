{
  "name": "climate-change-lab",
  "version": "0.0.1",
  "description": "A climate change modelling data and graphical visualizations lab by Azavea",
  "keywords": [
    "climate change lab",
    "climate change",
    "lab",
    "Azavea"
  ],
  "license": "Apache 2",
  "scripts": {
    "tslint": "tslint",
    "webpack": "webpack",
    "webpack-dev-server": "webpack-dev-server",
    "protractor": "protractor",

    "build": "npm run build:dev",
      "prebuild:dev": "npm run clean:dist",
    "build:dev": "webpack --config config/webpack.dev.js --progress --profile --colors --display-error-details --display-cached",
      "prebuild:prod": "npm run clean:dist",
    "build:prod": "webpack --config config/webpack.prod.js  --progress --profile --colors --display-error-details --display-cached --bail",

    "server": "npm run server:dev",
    "server:dev": "webpack-dev-server --config config/webpack.dev.js --progress --profile --colors --watch --display-error-details --display-cached --content-base src/ --host 0.0.0.0 --port 3100",
    "server:dev:hmr": "npm run server:dev -- --inline --hot",

    "lint": "npm run tslint \"src/**/*.ts\"",

    "test": "karma start",

    "docs": "npm run typedoc -- --options typedoc.json --exclude '**/*.spec.ts' ./src/",

    "start": "npm run server:dev:hmr"
   },

